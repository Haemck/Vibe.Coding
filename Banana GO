// ==UserScript==
// @name         Digiseller: Banana GO (–∏—Å—Ç–æ—Ä–∏—è, —Å—Ç–∏–ª—å –ø–æ–∏—Å–∫–∞, ggsel ‚Üí —Å–æ–æ–±—â–µ–Ω–∏—è, –ø–∞—Å—Ö–∞–ª–∫–∞, no-panel-on-ggsel, anim, no-ui-on-ggsel, EN-seller-fix)
// @namespace    http://tampermonkey.net/
// @version      3.10
// @description  –ë—ã—Å—Ç—Ä—ã–π –ø–µ—Ä–µ—Ö–æ–¥ + –∏—Å—Ç–æ—Ä–∏—è/–∑–∞–∫—Ä–µ–ø—ã —Å–≤–µ—Ä—Ö—É, —Å—Ç–∏–ª—å –ø–æ–∏—Å–∫–∞ vibe, –ø–∞—Å—Ö–∞–ª–∫–∞! UI –Ω–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –Ω–∞ ggsel, –Ω–æ –∞–≤—Ç–æ-–ø—Ä—ã–∂–∫–∏ —Ä–∞–±–æ—Ç–∞—é—Ç –≤—Å–µ–≥–¥–∞! EN-ggsel –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è!
// @author       vibe.coding
// @match        https://my.digiseller.ru/*
// @match        https://ggsel.net/*
// @run-at       document-end
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    const isGgsel = window.location.hostname.includes('ggsel.net');

    // --- GGSEL: –∞–≤—Ç–æ-–ø—Ä—ã–∂–æ–∫ –∫ —Å–æ–æ–±—â–µ–Ω–∏—è–º –ø—Ä–æ–¥–∞–≤—Ü–∞ (ru/en) ---
    if (
        isGgsel &&
        /^(\/(en\/)?catalog\/product\/\d+)/.test(window.location.pathname) &&
        (
            window.location.search.includes("extract_seller=1") ||
            window.location.search.includes("extract_seller_from_hist=1")
        )
    ) {
        // –ü–æ–∏—Å–∫ <a href="/sellers/ID... –∏–ª–∏ <a href="/en/sellers/ID... –Ω–∞ –ª—é–±–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ ggsel (–ª—é–±–æ–≥–æ —è–∑—ã–∫–∞)
        let sellerLinks = Array.from(document.querySelectorAll('a[href*="/sellers/"]'));
        let sellerId = null;
        for (let link of sellerLinks) {
            let href = link.getAttribute('href');
            let idMatch = href && href.match(/sellers\/(\d+)/);
            if (idMatch) {
                sellerId = idMatch[1];
                break;
            }
        }
        if (sellerId) {
            localStorage.setItem('banana_seller_id', sellerId);
            window.location.href = "https://my.digiseller.ru/asp/seller_messages.asp?id_s=" + sellerId;
        }
        return;
    }

    if (isGgsel) return;

    // --- –°—Ç–∏–ª–∏ –∏ –∞–Ω–∏–º–∞—Ü–∏—è ---
    const vibeCSS = `
